<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

<body>
    
    <%- include('../partials/header') %>
   <main >
       
        <section class="send-planet">
            <!-- 
                action: la ruta donde vamos a mandar nuestros campos 
            -->
            <form action="/planets/<%= planet.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="input-container">
                    <label for="name">Ingrese su nombre</label>
                    <input type="text" name="name" id="name" required value="<%= planet.name %>"/>
                </div>

                <div class="input-container">
                    <label for="galaxy">Seleccione la galaxia a la que pertenece</label>
                    <select name="galaxy" id="galaxy" style="width: 100%;">
                        <% galaxies.forEach(galaxy => { %>
                            <option value="<%= galaxy.id %>" <%= planet.galaxy_id === galaxy.id ? "selected": "" %>><%= galaxy.name %></option>

                        <% }) %>
                    </select>
                </div>

                <div class="input-container">
                    <label for="hasRings">¿Su planeta tiene anillos?</label>
                    <input type="radio" name="hasRings" id="hasRings" value="true" <%= planet.hasRings == 1 ? 'checked' : '' %>  /> Si
                    <input type="radio" name="hasRings" id="hasRings" value="false" <%= planet.hasRings == 0 ? 'checked' : '' %> /> No
                </div>

                <div class="input-container">
                    <label for="colors">Seleccione los colores</label>
                    <select name="colors" id="colors" style="width: 100%;" multiple>
                        <% colors.forEach(color => { %>
                            <option value="<%= color.id %>"><%= color.name %></option>

                        <% }) %>
                    </select>
                </div>

                <div class="input-container">
                    <label for="life">Imágen</label>
                    <img src="<%= planet.image %>" width="300" />
                    <input type="file" name="image" id="image" />
                </div>

                <div class="input-container">
                    <button type="submit">GUARDAR</button>
                </div>

            </form>
        </section>


   </main>

   <div id="space-x-banner"></div>

   <%- include('partials/footer') %>
</body>
</html> 